{
  "name": "typescript-client",
  "version": "1.0.0",
  "description": "A web client boilerplate built on TypeScript, React and Webpack.",
  "main": "server.js",
  "private": true,
  "scripts": {
    "build": "webpack -p",
    "start": "node server.js",
    "test": "jest --coverage --verbose",
    "dev": "concurrently -k -p \"[{name}]\" -n \"Typescript,Node\" -c \"cyan.bold,green.bold\" \"npm run build:watch\" \"npm run start:watch\"",
    "build:watch": "webpack -d --devtool eval-source-map --watch",
    "start:watch": "nodemon server.js",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexmirrington/typescript-client.git"
  },
  "author": "Alex Mirrington",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexmirrington/typescript-client/issues"
  },
  "homepage": "https://github.com/alexmirrington/typescript-client#readme",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.0",
    "@testing-library/react": "^10.4.4",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.14",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.1",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "express": "^4.17.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}